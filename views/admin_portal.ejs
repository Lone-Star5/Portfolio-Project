<head>
    <meta charset="utf-8">
    <title>My Blogs</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
</head>

<body>
    <!-- List all blogs using Semantic-UI under this page -->
    <div class="ui inverted top fixed menu">
        <div class="item ui small header">Sample branding</i></div>
        <div class="item ui medium header"><a href="/newblog">Create blog</a></div>
        <div class="right menu">
            <div class="item ui medium header"><a href="/logout">Logout</a></div>
        </div>
    </div>
    <div style="margin-top:8%">
        <div class="ui huge header" style="text-align: center;">My blogs</div>
        <div class="ui raised very padded text container segment">
            <div class="ui divided items">
                <%blogs.forEach(function(blog){%>
                <div id="blogdet" class="item">
                    <div class="content">
                        <div class="header">
                            <h2 style="text-align:center;"><%=blog.title%></h2>
                        </div>
                        <div class="description"><p><%=blog.body.substring(0,blog.body.length*0.4)%>...</p></div>
                            <div class="extra">
                                <form class="ui form" action="/login/success/delete/<%=blog._id%>?_method=delete" method="post">
                                    <a class="ui button positive" href="./success/edit/<%=blog._id%>">Edit Blog<i class="angle right icon"></i></a>
                                    <button class="ui red button">Delete Blog</button>
                                </form>
                            </div>
                    </div>  
                </div>
                <%});%>
            </div>
        </div>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="semantic/dist/semantic.min.js"></script>
</body>